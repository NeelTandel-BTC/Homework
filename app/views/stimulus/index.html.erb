<div data-controller="clipboard">
  PIN: <input type="text">
  <button >Copy to Clipboard</button>

  <div class="right_col" role="main">
    <h2>Adderss</h2>
    <%= form_with(class: 'form-horizontal form-label-left', id: 'form' , data: { validate: 'parsley'}) do |f| %>

  <div class="form-group">
      <%= f.label :country_id, "Country" , class: 'control-label col-md-3 col-sm-3 col-xs-12'  %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.select :country_id , options_for_select(['a','b']),{}, {data:{action:"change->clipboard#copy"}}%>
      </div>
    </div>

    <div class="form-group" >
      <%= f.label :country_id, "cities" , class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-6 col-sm-6 col-xs-12" id='city'>
        <%= f.select :city_id , options_for_select([]),{},{id:'citys'} %>
      </div>
    </div>
    <%= content_tag :div , class: 'form-group' do %>
      <%= content_tag :div , class: 'col-md-6 col-md-offset-3' do %>
        <%= button_tag('Cancel' , class: 'btn btn-primary') %>
        <%= button_tag('Submit' , class: 'btn btn-success', id: 'success') %>
      <% end %>
    <% end %>
  <% end %>
  </div>
</div>